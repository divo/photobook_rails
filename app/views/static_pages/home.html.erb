<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Momento - Personal photo albums in a few clicks</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Google fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&amp;display=swap" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
  </head>
  <body id="page-top">
   <!-- Mashead header-->
   <header class="<%= @masthead_tag %>">
      <div class="container px-5">
        <div class="row gx-5 align-items-center">
          <div class="col-lg-6">
            <!-- Mashead text and app badges-->
            <div class="mb-5 mb-lg-0 text-center text-lg-start">
              <h1 class="display-1 lh-1 mb-3 newsreader">Create beautiful photo albums in a few minutes.</h1>
              <p class="lead fw-normal text-muted mb-5 newsreader">Our best memories are tucked away on our phones. In just a few minutes you can have a beautiful physical photo album to share.</p>
              <div class="d-flex flex-column flex-lg-row align-items-center">
                <!-- maybe one day I'll create an app too-->
                <!--<a class="me-lg-3 mb-4 mb-lg-0" href="#!"><img class="app-badge" src="assets/google-play-badge.svg" alt="..." /></a>
                <a href="#!"><img class="app-badge" src="assets/app-store-badge.svg" alt="..." /></a>-->
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="features-device-mockup">
              <%= image_tag "photo-book.png", class: "photo-book" %>
            </div>
          </div>
        </div>
      </div>
    </header>
   <!-- App features section-->
    <section id="features" class="white">
      <div class="container px-5">
        <div class="row gx-5 align-items-center">
          <div class="col-lg-0 order-lg-1 mb-5 mb-lg-0">
            <div class="container-fluid px-5">
              <div class="row gx-5">
                <div class="col-md-6 mb-5">
                  <!-- Feature item-->
                  <div class="text-center">
                    <i class="bi-phone icon-feature text-gradient d-block mb-3"></i>
                    <h3 class="font-alt">Mobile Friendly</h3>
                    <p class="text-muted mb-0">Upload directly from your device</p>
                  </div>
                </div>
                <div class="col-md-6 mb-5">
                  <!-- Feature item-->
                  <div class="text-center">
                    <i class="bi-camera icon-feature text-gradient d-block mb-3"></i>
                    <h3 class="font-alt">Easy to Use</h3>
                    <p class="text-muted mb-0">Photos are automatically labelled and grouped</p>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-5 mb-md-0">
                  <!-- Feature item-->
                  <div class="text-center">
                    <i class="bi-gift icon-feature text-gradient d-block mb-3"></i>
                    <h3 class="font-alt">The Perfect Gift</h3>
                    <p class="text-muted mb-0">Create a beautiful gift to share</p>
                  </div>
                </div>
                <div class="col-md-6">
                  <!-- Feature item-->
                  <div class="text-center">
                    <i class="bi-patch-check icon-feature text-gradient d-block mb-3"></i>
                    <h3 class="font-alt">Unlock Memories</h3>
                    <p class="text-muted mb-0">Transform your digital photos into timeless keepsakes</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Call to action section-->
    <section class="cta">
      <div class="cta-content">
        <div class="container px-5">
          <h2 class="text-white display-1 lh-1 mb-4 newsreader">
            <br />
            Start now.
          </h2>
          <a class="btn btn-outline-light py-3 px-4 rounded-pill" href="/photo_albums" target="_blank">Create Album</a>
        </div>
      </div>
    </section>
   <footer class="bg-black text-center py-5">
      <div class="container px-5">
        <div class="text-white-50 small">
          <div class="mb-2">&copy; Mementos 2022. All Rights Reserved.</div>
          <a href="/privacy">Privacy</a>
          <span class="mx-1">&middot;</span>
          <a href="#!">Terms</a>
          <span class="mx-1">&middot;</span>
          <a href="#!">FAQ</a>
        </div>
      </div>
    </footer>
 </body>
</html>
