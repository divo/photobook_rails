<head>
  <%= display_meta_tags site: "Mementos" %>

  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= favicon_link_tag "favicon.ico" %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" %>
  <%= javascript_importmap_tags %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="preconnect" href="https://fonts.gstatic.com" />
  <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&amp;display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&amp;display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&amp;display=swap" rel="stylesheet" />

  <link rel="canonical" href="<%= url_for(:only_path => false) %>" />

  <meta property="og:title" content="Mementos: Personalized photo albums in a few minutes." />
  <meta property="og:description" content="Personalized photo albums in just a few minutes. Show your loved ones where you've been." />
  <meta property="og:image" content="https://divo-photobook-pdf-public.s3.eu-west-1.amazonaws.com/example_album_reduced.jpg" />
  <meta property="og:url" content="https://mementos.ink" />

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-WWXZED210F"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-WWXZED210F');
  </script>

  <%= javascript_include_tag "https://challenges.cloudflare.com/turnstile/v0/api.js", "data-turbo-track": "reload", defer: true %>

  <% if defined?(@home) %>
  <% end %>
</head>
