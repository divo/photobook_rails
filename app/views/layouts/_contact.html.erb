<!-- Feedback Modal-->
<% if !@mobile_app %>
  <button class="at-float btn btn-primary rounded-pill px-3 mb-2 mb-lg-0" id="at-menu-support">
    <%= mail_to 'support@mementos.ink' do %>
      <span class="d-flex align-items-center" style="color:#fff">
        <i class="bi bi-envelope-open my-float"></i>
        <span class="small mx-1">Contact Us</span>
      </span>
    <% end %>
  </button>
  <footer class="bg-black text-center py-4 footer mt-auto">
    <div class="container px-5">
      <div class="text-white-50 small">
        <div class="mb-2">&copy; Mementos 2023. All Rights Reserved.</div>
        <a href="/privacy">Privacy</a>
        <span class="mx-1">&middot;</span>
        <a href="#!">Terms</a>
        <span class="mx-1">&middot;</span>
        <a href="#!">FAQ</a>
      </div>
    </div>
  </footer>
<% end %>
