<p style="color: green"><%= notice %></p>

<h1 class="navbar navbar-expand-lg navbar-light bg-light container mt-3">Photo Albums</h1>

<div id="photo_albums" class="container mt-3">
  <% @photo_albums.each do |photo_album| %>
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <h3><%= photo_album.name %></h3>
        <%= render 'photos/cover', photo_album: photo_album %>
        <p>
        <%= link_to "Show this photo album", photo_album, class: "button btn btn-outline-primary mt-3" %>
        </p>
      </div>
      <div class="col"></div>
    </div>
  <% end %>
</div>

<div class="navbar navbar-expand-lg navbar-light bg-light container mt-3">
  <%= link_to "New photo album", new_photo_album_path, class: "button btn btn-outline-primary" %>
</div>
