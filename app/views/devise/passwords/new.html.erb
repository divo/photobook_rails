<div class="container masthead">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row justify-content-center">
    <% card_border = @mobile_app ? "border-light" : "border-secondary" %>
    <div class="card <%= "#{card_border}" %> m-3 col-sm-3 p-0">
      <div class="text-lg-start">
        <h2 class="mb-3 card-header">Forgot your password?</h2>
      </div>

      <div class="p-3">


        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="field mb-3">
            <%= f.label :email, style: "display: block", class: "col-form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control simple-field" %>
          </div>

          <div class="actions mb-3">
            <%= f.submit "Send me reset password instructions", class: "button btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
